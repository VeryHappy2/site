@model MVC.ViewModels.BasketViewModels.BasketViewModel

@{
	int sumAmount = 0;
	decimal sumPrice = 0;
}

<div style=" display: flex; justify-content: space-between; height: 45px; background:#dfdfdf"
	@foreach(BasketProduct product in Model.Data)
	{
		sumAmount += product.Amount;
		Model.SumPrice += product.ProductPrice * product.Amount;
	}
	<p>Sum price: @Model.SumPrice</p>
	<p>Sum amount: @sumAmount</p>
	
</div>